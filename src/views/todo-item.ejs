<div class="p-4 space-y-4 border rounded-lg shadow-sm bg-card text-card-foreground"
     data-v0-t="card"
     id="todo-<%= todo.id %>">
  <div class="flex items-center space-x-2">
  </div>
  <input type="checkbox"
         <%= todo.is_completed ? 'checked' : '' %>
         class="w-4 h-4 border-gray-300 rounded text-primary focus:ring-primary"
         hx-put="/todos/<%= todo.id %>"
         hx-swap="outerHTML"
         hx-target="closest div[data-v0-t='card']">
  <h3 class="text-lg font-semibold">
    <%= todo.title %>
  </h3>
</div>
<p class="text-sm text-muted-foreground">
  <%= todo.description %>
</p>
<div class="flex items-center justify-between text-xs">
  <span class="text-muted-foreground">Due: <%= todo.due_date %></span>
  <span
        class="font-medium <%= todo.is_completed ? 'text-green-600' : 'text-yellow-600' %>">
    Status: <%= todo.is_completed ? 'Completed' : 'Pending' %>
  </span>
</div>
<button hx-delete="/todos/<%= todo.id %>"
        hx-target="#todo-<%= todo.id %>"
        hx-swap="outerHTML"
        class="px-4 py-2 text-sm font-medium text-white transition-colors bg-red-500 rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
  Delete
</button>
</div>